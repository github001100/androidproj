<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hdmes.crane001.MainActivity">

    <ImageView
        android:id="@+id/imageview2"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_above="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFF"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/a20170916" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_username"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editText_username"
        android:layout_marginStart="33dp"
        app:srcCompat="@drawable/ren" />

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/editText2_userpass"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="请输入用户名"
        android:inputType="textPersonName"
        android:maxLength="16"
        android:textSize="16dp"
        android:layout_alignStart="@+id/editText2_userpass" />

    <EditText
        android:id="@+id/editText2_userpass"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_above="@+id/get_password"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView2"
        android:background="@drawable/bg_edittext"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPersonName|textPassword"
        android:maxLength="16"
        android:textSize="16dp"
        android:layout_alignStart="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/get_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_login"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/checkBox3"
        android:text="@string/get_password" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/get_password"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_below="@+id/checkBox3"
        android:layout_marginTop="31dp"
        android:background="@android:color/holo_green_light"
        android:text="@string/button_login" />

    <Button
        android:id="@+id/button2_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="12dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/button2_cancel" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:gravity="center_horizontal"
        android:text="Copyright 2017 All Rights Reserved By"
        android:textColor="#a4a0a4"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="未名网络科技有限公司"
        android:textColor="#a4a0a4"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/suo"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_above="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBox3"
        android:layout_marginStart="9dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView2" />

</RelativeLayout>
